{{> navigationAdmin}}

<div class="container">

    <a class="btn btn-success mb-3" href="/service/create">Agregar servicio</a>

    <div class="accordion" id="accordionPanelsStayOpenExample">
        {{#each tipos}}
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-heading{{id_tipo}}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#panelsStayOpen-collapse{{id_tipo}}" aria-expanded="false"
                    aria-controls="panelsStayOpen-collapse{{id_tipo}}">
                    {{tipo}}
                </button>
            </h2>
            <div id="panelsStayOpen-collapse{{id_tipo}}" class="accordion-collapse collapse"
                aria-labelledby="panelsStayOpen-heading{{id_tipo}}">
                {{#each servicio}}
                <div class="accordion-body">
                    <div class="row">
                        <div class="col-9">
                            <p> {{nombre}} </p>
                        </div>
                        <div class="col">
                            <a class="btn btn-success" href="/service/update/{{id_servicio}}">Editar</a>
                        </div>
                        <div class="col">
                            <a class="btn btn-danger" href="/service/delete/{{id_servicio}}">Eliminar</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>

</div>
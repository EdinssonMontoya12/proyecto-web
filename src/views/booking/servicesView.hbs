{{> navigation}}

<div class="container p-4">
    <div class="row">
        {{#each reservas}}
        <div class="col-md-3 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title">
                        {{nombre}}
                    </h3>
                    <p>{{costo}}</p>
                    <p>{{duracion}}</p>
                    <p>{{fecha fecha_reserva}} a las {{hora_reserva}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{> navigation}}

<div class="container">
    <div class="row mb-5">
        <form action="/reserve/add/service/{{id_reserva}}" method="post">
            <div class="input-group" data-placement="left" data-align="top" data-autoclose="true">
                <select name="id_servicio" class="form-select" aria-label="Default select example">
                    <option selected>Selecciona un servicio</option>
                    {{#each services}}
                    <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <input type="date" name="fecha_reserva" class="form-control">
                <input type="time" name="hora_de_reserva" class="form-control">
                <button class="btn btn-success">Agregar servicio</button>
            </div>
        </form>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Precio</th>
                    <th>Duraci√≥n</th>
                </tr>
            </thead>
            <tbody>
                {{#each servicesReserva}}
                <tr>
                    <th>{{nombre}}</th>
                    <th>{{fecha fecha_reserva}}</th>
                    <th>{{aHora hora_reserva}}</th>
                    <th>${{costo}}</th>
                    <th>{{aHora duracion}}</th>
                    <th><a href="/delete/service/reserve/{{id}}/{{id_reserva}}">eliminar</a></th>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <a href="/reserver/validate/{{id_reserva}}" class="btn btn-success">aceptar</a>
    <a href="/reserver/cancel/{{id_reserva}}" class="btn btn-danger">cancelar</a>
</div>